User @HTTPD_USER@

ServerName @SERVER_NAME@
ServerRoot "@SERVER_DIR@"

Include "conf/modules.conf"

DocumentRoot "@SERVER_DIR@/htdocs"

<IfModule log_config_module>
    LogFormat "%h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\" %k" combined
    LogFormat "%h %l %u %t \"%r\" %>s %b" common
    CustomLog "logs/access_log" combined
    
</IfModule>

Listen @HTTP_PORT@
Listen @HTTPS_PORT@

# Insert our test specific configuration before the first vhost,
# so that its vhosts can be the default one. This is relevant in
# certain behaviours, such as protocol selection during SSL ALPN 
# negotiation.
#
Include "conf/test.conf"

SSLCertificateFile conf/ssl/not-forbidden.org_cert.pem
SSLCertificateKeyFile conf/ssl/cert.pkey

<VirtualHost *:@HTTP_PORT@>
    ServerName localhost
    
    DocumentRoot "@SERVER_DIR@/htdocs"
    
</VirtualHost>

<VirtualHost *:@HTTP_PORT@>
    ServerName test1.@HTTP_TLD@
    ServerAlias www1.@HTTP_TLD@
    Protocols h2c http/1.1
    DocumentRoot "@SERVER_DIR@/htdocs/test1"
    
    SSLEngine on
</VirtualHost>

<VirtualHost *:@HTTPS_PORT@>
    ServerName not-forbidden.org
    ServerAlias www.not-forbidden.org
    
    DocumentRoot "@SERVER_DIR@/htdocs"
    
    SSLEngine on
</VirtualHost>

<VirtualHost *:@HTTPS_PORT@>
    ServerName test1.@HTTP_TLD@
    ServerAlias www1.@HTTP_TLD@
    Protocols h2 http/1.1
    
    DocumentRoot "@SERVER_DIR@/htdocs/test1"
    
    SSLEngine on

    <Location /006>
        Options +Indexes
        HeaderName /006/header.html
    </Location>
</VirtualHost>

<VirtualHost *:@HTTPS_PORT@>
    ServerName test2.@HTTP_TLD@
    ServerAlias www2.@HTTP_TLD@
    Protocols http/1.1 h2
    
    DocumentRoot "@SERVER_DIR@/htdocs/test2"
    
    SSLEngine on
</VirtualHost>

<Directory "@SERVER_DIR@/htdocs/cgi">
    Options Indexes FollowSymLinks
    AllowOverride None
    Require all granted

    AddHandler cgi-script .py
    AddHandler cgi-script .cgi
    Options +ExecCGI
</Directory>


